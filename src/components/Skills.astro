---
import type { SkillDataType } from "@/types";
import SkillDataProvider from "./react/SkillDataProvider";
const skills = await Astro.glob<SkillDataType>("../pages/skills/skills.md");
console.log(skills)


---

<section
  id="skills"
  class="mt-100 flex flex-col items-center justify-center gap-3 h-full relative overflow-hidden pb-80 py-20"
  style={{ transform: "scale(0.9" }}
>  

  <div
    class="flex flex-row justify-around flex-wrap mt-4 gap-5 items-center"
  >
    {
      skills[0].frontmatter.data.map((image, index) => (
        <SkillDataProvider  client:visible           
          src={image.Image}
          width={image.width}
          height={image.height}
          index={index}
        />
      ))
    }
  </div>

  <div class="flex flex-row justify-around flex-wrap mt-4 gap-5 items-center">
    {skills[0].frontmatter.data2.map((image, index) => (
      <SkillDataProvider     
        src={image.Image}
        width={image.width}
        height={image.height}
        index={index}
      />
    ))}
  </div>
  

  

  <div class="w-full h-full absolute">
    <div
      class="w-full h-full z-[-10] opacity-30 absolute flex items-center justify-center bg-cover"
    >
     { /*<video
        class="w-full h-auto"
        preload="false"
        playsInline
        loop
        muted
        autoPlay
        src="/cards-video.webm"></video>
     */ }
    </div>
  </div>
</section>
